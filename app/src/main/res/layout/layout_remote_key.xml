<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llt_remote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_window"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/item_margin"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:id="@+id/iv_power"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_key_sel_c5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="3dp"
                android:src="@drawable/x_icon_power" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电源"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/t_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_key_sel_c5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="3dp"
                android:src="@drawable/x_icon_input" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信源"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/t_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_key_sel_c5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="visible">

            <ImageView

                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="3dp"
                android:src="@drawable/x_icon_menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菜单"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/t_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_key_sel_c5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="gone">


            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="2dp"
                android:src="@drawable/x_icon_rback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/t_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:background="@drawable/shape_oval_gray"
                android:padding="15dp"
                android:src="@drawable/x_icon_rback"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlt_volume"
            android:layout_width="56dp"
            android:layout_height="135dp"
            android:background="@drawable/shape_10"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <ImageView
                android:id="@+id/iv_volume_up"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_remote_key"
                android:padding="12dp"
                android:src="@drawable/x_icon_volume_up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="音量"
                android:textColor="@color/subtitle"
                android:textSize="@dimen/t_text_size" />

            <ImageView
                android:id="@+id/iv_volume_down"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_remote_key"
                android:padding="12dp"
                android:src="@drawable/x_icon_volume_down" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_mute"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shape_oval_gray"
                android:padding="15dp"
                android:src="@drawable/x_icon_mute" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlt_fangxiang"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_oval_gray"
        android:padding="2dp">

        <ImageView
            android:id="@+id/iv_shang"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_remote_key"
            android:padding="12dp"
            android:src="@drawable/x_icon_shang" />

        <ImageView
            android:id="@+id/iv_xia"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_remote_key"
            android:padding="12dp"
            android:src="@drawable/x_icon_xia" />

        <ImageView
            android:id="@+id/iv_zuo"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_remote_key"
            android:padding="12dp"
            android:src="@drawable/x_icon_zuo" />

        <ImageView
            android:id="@+id/iv_you"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_remote_key"
            android:padding="12dp"
            android:src="@drawable/x_icon_you" />

        <ImageView
            android:id="@+id/iv_ok"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_remote_key"
            android:src="@drawable/x_icon_ok" />

    </RelativeLayout>

</LinearLayout>
