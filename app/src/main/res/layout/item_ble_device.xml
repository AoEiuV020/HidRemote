<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginTop="1dp"
    android:background="@color/bg_item">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小米电视"
            android:textColor="@color/main_text"
            android:textSize="@dimen/m_text_size" />

        <TextView
            android:id="@+id/tv_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小米电视"
            android:textColor="@color/subtitle"
            android:textSize="@dimen/t_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ispair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/item_padding"
        android:text="已配对，点击连接"
        android:textColor="@color/main_color"
        android:textSize="@dimen/t_text_size" />

</RelativeLayout>
